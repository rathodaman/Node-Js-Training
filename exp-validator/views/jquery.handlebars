<html>
    <head>
        <title>validation plugin</title>
        <style>
            .error{
                color: red;
            }
            legend{
                font-size: 50px;
                background-color: black;
                color: cornsilk;
            }
            body{
                background-color: #D7DBDD ;
            }
        </style>
        <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
         <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
      
           <div class="mx-auto card" style="width: 50rem; ">
            <div class="card-header">
              <h3 class="card-title">Signup Form</h3>
            </div>
            <div class="container ">
            
        <form method="post" class="col-md-8 mx-auto" id="signupForm">
            
                <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    <input type="text" class="form-control" name="name" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Name">
                    {{#if errors}}
                    <small id="emailHelp" >{{errors.name.msg}}</small>
               {{/if}}
                </div>
                 <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Email">
                    {{#if errors}}
                    <small id="emailHelp" >{{errors.email.msg}}</small>
                {{/if}}
                </div>
                 <div class="form-group">
                    <label for="exampleInputEmail1">Mobile No.</label>
                    <input type="number" class="form-control" name="mobile" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Mobile No.">
                     {{#if errors}}
                    <small id="emailHelp" >{{errors.mobile.msg}}</small>
                {{/if}}
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Enter Password">
                     {{#if errors}}
                     <small id="emailHelp" >{{errors.password.msg}}</small>
                {{/if}}
                </div>
                 <div class="form-group">
                    <label for="exampleInputPassword1">Aadhar Card No.</label>
                    <input type="number" class="form-control" name="aadhar" id="exampleInputPassword1" placeholder="Enter Aadhar No">
                     {{#if errors}}
                     <small id="emailHelp" >{{errors.aadhar.msg}}</small>
                {{/if}}
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Pan Card No.</label>
                    <input type="text" class="form-control" name="pan" id="exampleInputPassword1" placeholder="Enter PanCard No">
                     {{#if errors}}
                     <small id="emailHelp" >{{errors.pan.msg}}</small>
                {{/if}}
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Passport No.</label>
                    <input type="text" class="form-control" name="passport" id="exampleInputPassword1" placeholder="Enter Passport No">
                     {{#if errors}}
                     <small id="emailHelp" >{{errors.passport.msg}}</small>
                {{/if}}
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">GST No.</label>
                    <input type="text" class="form-control" name="gst" id="exampleInputPassword1" placeholder="Enter GST No">
                     {{#if errors}}
                     <small id="emailHelp" >{{errors.gst.msg}}</small>
                {{/if}}
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Indian Mobile No.</label>
                    <input type="text" class="form-control" name="indianNo" id="exampleInputPassword1" placeholder="Enter Indian Mob. No">
                     {{#if errors}}
                     <small id="emailHelp" >{{errors.indianNo.msg}}</small>
                {{/if}}
                </div><br>
                <div class="form-group">
                    <div class=" col-4 mx-auto">
                        <button type="submit" class="btn btn-primary btn-block ">Submit</button>
                    </div>
                </div>  
            </form><br>
            </div>
       </div>
    </div>






            <form class="cmxform" id="signupForm" method="get" action=""> 
            <fieldset>
            <legend>validation form</legend>
            <table align="center" cellpading="10" cellspacing="30">
                <tr>
                    <td>
                        <label for="firstname">Firstname</label>
                        <input id="firstname" name="firstname" type="text">
                    </td>
                    <td>
                        <label for="lastname">Lastname</label>
                        <input id="lastname" name="lastname" type="text">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="username">Username</label>
                        <input id="username" name="username" type="text">
                    </td>
                    <td>
                        <label for="email">Email</label>
                        <input id="email" name="email" type="email">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="age">Age</label>
                        <input id="age" name="age" type="number">
                    </td>
                    <td>
                        <label for="dob">DOB</label>
                        <input id="dob" name="dob" type="date">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="password">Password</label>
                        <input id="password" name="password" type="password">
                    </td>
                    <td>
                        <label for="confirm_password">Confirm password</label>
                        <input id="confirm_password" name="confirm_password" type="password">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="mob">Mobile No</label>
                        <input id="mob" name="mob" type="number">
                    </td>
                    <td>
                        <label for="img">Upload Photo</label>
                        <input id="img" name="img" type="file">
                    </td>
                </tr>
                <tr>
                    <td>
                        <input class="submit" type="submit" value="Submit" align="center">
                    </td>
                </tr>
            </table>
            </fieldset>
            <script>
            $("document").ready(function(){
               		// validate signup form on keyup and submit
		$("#signupForm").validate({
			rules: {
				name: {
                    required :true,
                    minlength:4
                 },
                email: {
					required: true,
					email: true,
                     minlength:10
				},
                mobile: {
					required: true,
					minlength: 13,
                    maxlength: 13
				},
                password: {
					required: true,
					minlength: 5
				},
				confirm_password: {
					required: true,
					minlength: 5,
					equalTo: "#password"
				},
                aadhar: {
					required: true,
					min: 12,
					max: 12
				},
                pan: {
					required: true,
					min: 12,
					max: 12
				},
                passport: {
					required: true,
					min: 12,
					max: 12
				},
                gst: {
					required: true,
					min: 12,
					max: 12
				},
                indianNo: {
					required: true,
					min: 13,
					max: 13
				},
				
               
                dob:{
                    required: true,

                },
               age:{
                   required: true,
                   min: 18,
                   max: 100
               },
               img:{
                    required: true
               }
				
			},
			messages: {
				name: {
                   required: "Please enter your name",
                    minlength: "Your name must consist of at least 4 characters"
                },
				email: {
					required: "Please enter a valid email address",
					minlength: "Your email must consist of at least 10 characters"
				},
                mobile: {
					required: "Please Enter Mobile No.",
					minlength: "Your MObile No must be at least 13 Numbers long",
					maxlength: "Your MObile No must be at least 13 Numbers long",
				},
				password: {
					required: "Please provide a password",
					minlength: "Your password must be at least 5 characters long"
				},
				cpassword: {
					required: "Please provide a password",
					minlength: "Your password must be at least 5 characters long",
					equalTo: "Please enter the same password as above"
				},
				
				
                dob: {
					required: "Please Enter Date Of Birth",
				},
               
			}
		});
            });
        </script>
            </form>
    </body>
</html>