    <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Update Product</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Update Product</li>
                    </ol>
                </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
<section class="content">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Update Product</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                  <i class="fas fa-minus"></i></button>
              </div>
            </div>
            <form method="post" enctype="multipart/form-data">
            <div class="card-body">
              <div class="form-group">
                <label for="inputName">Product Name</label>
                <input type="text" id="inputName" class="form-control" value="{{editdata.product_name}}" name="name">
              </div>
              <div class="form-group">
                <label for="inputName">Product Price</label>
                <input type="text" id="inputName" class="form-control" value="{{editdata.product_price}}" name="price">
              </div>
             <div class="form-group">
                <label for="inputDescription">Product Details</label>
                <input type="text" id="inputName" class="form-control" value="{{editdata.product_details}}" name="details">
                
              </div>

            <div class="form-group">
                <label for="inputStatus">Category</label>
                <select class="form-control custom-select" name="_category">
                  <option selected disabled>Select one</option>
                  {{#each category_array}}
                  <option value='{{_id}}'>{{category_name}}</option>
                    {{/each}}
                </select>
              </div>

              <div class="form-group">
                <label for="inputStatus">Subcategory</label>
                <select class="form-control custom-select" name="_subcategory">
                  <option selected disabled>Select one</option>
                  {{#each subcategory_array}}
                  <option value='{{_id}}'>{{subcategory_name}}</option>
                    {{/each}}
                </select>
              </div>

              <div class="form-group">
                <label for="inputDescription">Product Image</label><br>
                  <input type="file" id="inputName" value="{{editdata.product_image}}" name="image">{{editdata.product_image}}
              </div>

               <div class="row">
                    <div class=" col-4 mx-auto">
                        <button type="submit" class="btn btn-primary btn-block ">Update Product</button>
                    </div>
                </div>  
            </form>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        
      </div>