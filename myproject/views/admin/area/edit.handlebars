    <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Update Area</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Update Area</li>
                    </ol>
                </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
<section class="content">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Update Area</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                  <i class="fas fa-minus"></i></button>
              </div>
            </div>
            <form method="post" enctype="multipart/form-data">
            <div class="card-body">
              <div class="form-group">
                <label for="inputName">Area Name</label>
                <input type="text" id="inputName" class="form-control" value="{{editdata.area_name}}" name="name">
              </div>

            <div class="form-group">
                <label for="inputStatus">State</label>
                <select class="form-control custom-select" value="{{editdata.state_name}}" name="_state">
                  <option selected disabled>Select one</option>
                  {{#each state_array}}
                  <option value='{{_id}}'>{{state_name}}</option>
                    {{/each}}
                </select>
              </div>

              <div class="form-group">
                <label for="inputStatus">City</label>
                <select class="form-control custom-select" value="{{editdata.city_name}}" name="_city">
                  <option selected disabled>Select one</option>
                  {{#each city_array}}
                  <option value='{{_id}}'>{{city_name}}</option>
                    {{/each}}
                </select>
              </div>

               <div class="row">
                    <div class=" col-4 mx-auto">
                        <button type="submit" class="btn btn-primary btn-block ">Update Area</button>
                    </div>
                </div>  
            </form>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        
      </div>