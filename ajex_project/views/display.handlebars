 <style>
        table {
            counter-reset: tableCount;
        }
        .counterCell:before {
            content: counter(tableCount); 
            counter-increment: tableCount; 
        }
</style>
<table border="1" cellpadding="10" cellspacing="0" width="100%">
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Interest Area</th>
        <th>Gender</th>
        <th>Hobbies</th>
        <th>Address</th>
        <th>Image</th>
        <th>Action</th>
    </tr>
    {{#each userdata}}
    <tr>
        <td class="counterCell"></td>
        <td>{{firstName}}</td>
        <td>{{LastName}}</td>
        <td>{{interest}}</td>
        <td>{{gender}}</td>
        <td>{{hobby}}</td>
        <td>{{address}}</td>
        <td>
             <img src="/images/{{image}}" width="200px">
        </td>
        <td>
            <a href="/edit/{{_id}}">Edit</a> |
            <a href="/delete/{{_id}}">Delete</a>
        </td>
    </tr>
    {{/each}}
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Interest Area</th>
        <th>Gender</th>
        <th>Hobbies</th>
        <th>Address</th>
        <th>Image</th>
        <th>Action</th>
    </tr>
</table>